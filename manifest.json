{
    "manifest_version": 3,
    "name": "RequestGuard",
    "version": "1.0",
    "author": {
        "email": "gabriagp02@gmail.com"
    },
    "description": "Bloquea ciertas solicitudes hechas por una p√°gina. https://gabrielgarcia.vercel.app/",
    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "storage",
        "activeTab"
    ],
    "host_permissions": ["*://*/*"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [],
            "matches": ["<all_urls>"]
        }
    ]
}
